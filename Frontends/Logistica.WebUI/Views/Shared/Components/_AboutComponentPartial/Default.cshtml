@model AboutUsDto

<div class="container-fluid overflow-hidden py-5 px-lg-0">
    <div class="container about py-5 px-lg-0">
        <div class="row g-5 mx-lg-0">
            <div class="col-lg-6 ps-lg-0 wow fadeInLeft" data-wow-delay="0.1s" style="min-height: 400px;">
                <div class="position-relative h-100">
                    <img class="position-absolute img-fluid w-100 h-100" src="@Model.ImageUrl" style="object-fit: cover;" alt="">
                </div>
            </div>
            <div class="col-lg-6 about-text wow fadeInUp" data-wow-delay="0.3s">

                <h6 class="text-secondary text-uppercase mb-3">Hakkımızda</h6>
                <h1 class="mb-5">@Model.Title</h1>
                <p class="mb-5">@Model.Description</p>
                
                @await Component.InvokeAsync("_AboutUs2ComponentPartial")
                <a href="" class="btn btn-primary py-3 px-5">Daha Fazla</a>
            </div>
        </div>
    </div>
</div>